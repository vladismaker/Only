<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectSizeFragment"
    android:paddingHorizontal="10dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ваш размер"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp" />
            <ImageButton
                android:id="@+id/idClose"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_close"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/buttonXS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XS"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textViewNumberXS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 экземпляр!"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_gravity="right|center_vertical"
                android:visibility="gone"
                />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/buttonS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textViewNumberS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 экземпляр!"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_gravity="right|center_vertical"
                android:visibility="gone"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/buttonM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textViewNumberM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 экземпляр!"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_gravity="right|center_vertical"
                android:visibility="gone"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/buttonL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textViewNumberL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 экземпляр!"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_gravity="right|center_vertical"
                android:visibility="gone"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/buttonXL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textViewNumberXL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 экземпляр!"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_gravity="right|center_vertical"
                android:visibility="gone"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/buttonXXL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:backgroundTint="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXL"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textViewNumberXXL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 экземпляр!"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_gravity="right|center_vertical"
                android:visibility="gone"/>
        </FrameLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/add_basket_container_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">
    </FrameLayout>
</FrameLayout>